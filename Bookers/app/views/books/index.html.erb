
<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
　　<tr>
      <td><%= book.title %></td>
      <td> <%= book.body %></td>
      <td><a class="show_<%= book.id %>" href="/books/<%= book.id %>/false">Show</a></td>
      <td><a class="edit_<%= book.id %>" href="/books/<%= book.id %>/edit">Edit</a></td>
      <td><a data-confirm="Are you sure?" class="destroy_<%= book.id %>" rel="nofollow" data-method="delete" href="/books/<%= book.id %>">Destroy</a></td>
    </tr>
     <%end%>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4>
  <%= f.submit 'Create Book' %></h4>
<% end %>