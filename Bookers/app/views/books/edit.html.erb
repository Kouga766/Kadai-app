

<body>
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

      <h4>Title</h4>


      <%= f.text_field :title %>



    <h4>body</h4>
  <%= f.text_area :body %>


    <h4><%= f.submit 'Update Book' %><h4>

　<%end%>
  <a class="show_<%= @book.id %>" href="/books/<%= @book.id %>/false">Show</a>
  <a class="back" href="/books">Back</a>

</body>